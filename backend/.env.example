# 火山引擎 TOS 配置
TOS_ACCESS_KEY_ID=YOUR_ACCESS_KEY_ID
TOS_SECRET_KEY=YOUR_SECRET_KEY
TOS_BUCKET_NAME=liuxinyu
TOS_ENDPOINT=tos-cn-beijing.volces.com
TOS_REGION=cn-beijing

# BytePlus Ark API 配置
ARK_BASE_URL=https://ark.ap-southeast.bytepluses.com
ARK_API_KEY=YOUR_ARK_API_KEY

# Seedream 图片生成配置
SEEDREAM_MODEL=seedream-4-0-250828
SEEDREAM_SIZE=2k
SEEDREAM_WATERMARK=true

# Seedance 视频生成配置
SEEDANCE_MODEL=seedance-1-5-pro-251215
SEEDANCE_DURATION=5
SEEDANCE_CAMERA_FIXED=false

# SeedSpeech TTS 配置
SEEDSPEECH_ENDPOINT=https://voice.ap-southeast-1.bytepluses.com/api/v3/tts/unidirectional
SEEDSPEECH_APPID=YOUR_APPID
SEEDSPEECH_TOKEN=YOUR_ACCESS_TOKEN
SEEDSPEECH_CLUSTER=volcano_tts
SEEDSPEECH_RESOURCE_ID=volc.megatts.default
SEEDSPEECH_SPEAKER_ID=S_bRdcP1AR1

# OpenAI API 配置 (用于脚本生成)
OPENAI_API_KEY=YOUR_OPENAI_API_KEY
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4

# 服务配置
OUTPUT_FOLDER_PATH=./outputs/
